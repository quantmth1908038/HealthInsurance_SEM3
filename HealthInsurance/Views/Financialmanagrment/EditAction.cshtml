@model HealthInsurance.Models.PolicyApproval

@{
    ViewData["Title"] = "EditAction";
}

<section id="main-content">
    <section class="wrapper">
        <div class="form-w3layouts">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            Edit PolicyAction
                        </header>
                        <div class="panel-body">
                            <div class=" form">
                                <form asp-action="EditAction">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div class="form-group">
                                        <input type="hidden" asp-for="policyAction.PolicyActionId" />
                                        <label asp-for="policyAction.PolicyName" class="control-label"></label>
                                        <input asp-for="policyAction.PolicyName" class="form-control" />
                                        <span asp-validation-for="policyAction.PolicyName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="policyAction.Policydes" class="control-label"></label>
                                        <input asp-for="policyAction.Policydes" class="form-control" />
                                        <span asp-validation-for="policyAction.Policydes" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="policyAction.PolicyAmount" class="control-label"></label>
                                        <input asp-for="policyAction.PolicyAmount" class="form-control" />
                                        <span asp-validation-for="policyAction.PolicyAmount" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="policyAction.Emi" class="control-label"></label>
                                        <input asp-for="policyAction.Emi" class="form-control" />
                                        <span asp-validation-for="policyAction.Emi" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="policyAction.PolicyDurationInMonths" class="control-label"></label>
                                        <input asp-for="policyAction.PolicyDurationInMonths" class="form-control" />
                                        <span asp-validation-for="policyAction.PolicyDurationInMonths" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="policyAction.PolicyApprovalId" class="control-label"></label>
                                        <input asp-for="policyAction.PolicyApprovalId" class="form-control" />
                                        <span asp-validation-for="policyAction.PolicyApprovalId" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="Save" class="btn btn-default" />
                                        <a asp-action="Index" class="btn btn-outline-success">Back</a>
                                    </div>
                                </form>
                            </div>

                        </div>
                    </section>
                </div>
            </div>
        </div>
    </section>
</section>


<div>
    <a asp-action="Index">Back</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
