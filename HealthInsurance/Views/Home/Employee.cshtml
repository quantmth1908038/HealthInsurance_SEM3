@model HealthInsurance.Models.ViewModels.EmployeeViewModel

@{
    ViewData["Title"] = "Create Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .text-dange {
        color: red;
        font-size: 14px;
    }
</style>

<section id="main-content">
    <section class="wrapper">
        <div class="form-w3layouts">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            Add Employee
                        </header>
                        <div class="panel-body">
                            <div class=" form">
                                <form asp-action="AddEmployee" id="employee">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <label asp-for="FirstName" class="control-label">FirstName</label>
                                        <input asp-for="FirstName" class="form-control" id="firstname"/>
                                        <span class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="LastName" class="control-label">LastName</label>
                                        <input asp-for="LastName" class="form-control" id="lastname"/>
                                        <span class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ApplicationUser.Email" class="control-label">Email</label>
                                        <input asp-for="ApplicationUser.Email" class="form-control" id="email"/>
                                        <span class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label for="role" class="control-label">Role</label>
                                        <select name="Role.Name">
                                            @foreach (var r in Model.IdentityRoles)
                                            {
                                                <option value="@r.Name">@r.Name</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="Save" class="btn btn-default" />
                                        <a asp-action="Index" class="btn btn-outline-success">Back to List</a>
                                    </div>
                                </form>
                            </div>

                        </div>
                    </section>
                </div>
            </div>
        </div>
    </section>
</section>
<script src="~/js/validate.js"></script>
<script>
    Validator({
        form: "#employee",
        formGroupSelector: ".form-group",
        errorSelector: ".text-danger",
        rules: [
            Validator.isRequired("#firstname"),
            Validator.isRequired("#lastname"),
            Validator.isRequired("#email"),
            Validator.isEmail("#email", "Email is incorrect"),
        ],
    });
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}