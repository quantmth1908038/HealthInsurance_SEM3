                <div class="col-md-12 stats-info stats-last widget-shadow">
                    <div class="stats-last-agile">
                        <table class="table stats-table ">
                            <thead>
                                <tr>
                                    <th>S.NO</th>
                                    <th>NAME</th>
                                    <th>EMAIL</th>
                                    <th>ROLE</th>
                                    <th>Edit</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.TotalUser >= 1)
                                {
                                    var i = 1;
                                    @foreach (var u in Model.ListUserRoles)
                                    {
                                        <tr>
                                            <th scope="row">@i</th>
                                            <td>@u.User.UserName</td>
                                            <td><span class="label label-success">@u.User.Email</span></td>
                                            <td><h5><i class="fa fa-level-up">@*@u.Role.Name*@</i></h5></td>
                                            <td>@Html.ActionLink("Edit", "EditUser", new { UserId = u.User.Id })</td>
                                        </tr>
                                        i++;
                                    }
                                }

                            </tbody>
                        </table>
                    </div>
